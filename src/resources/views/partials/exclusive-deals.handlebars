<section class="exclusive-deals">
  <div class="main-content">
    <div class="ex-header">
      <h2>Up to -40% ðŸ¥³ Exclusive Deals</h2>
      <div class="filters">
        <button>Vegan</button>
        <button>Sushi</button>
        <button class="active">Pizza & Fast food</button>
        <button>Others</button>
      </div>
    </div>
    <div class="cards">
      {{#each exclusiveDeals}}
        <div class="deal-card">
          <img src="{{this.image}}" alt="{{this.alt}}" />
