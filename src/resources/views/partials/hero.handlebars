<!-- Hero Banner -->
<section class="hero-banner">
  <div class="hero-content">
    <div class="hero-left">
      <p class="subheading">
        Order Restaurant food, takeaway and groceries.
      </p>
      <h1 class="hero-title">
        Feast Your Senses,<br /><span>Fast and Fresh</span>
      </h1>
      <p class="instruction">Enter a postcode to see what we deliver</p>
      <form class="search-bar">
        <input type="text" placeholder="e.g. EC4R 3TE" />
        <button type="submit">Search</button>
      </form>
    </div>
    <div class="hero-right">
      <div class="yellow-shape"></div>
      <div class="hero-image-container">
        <img src="/img/hero-girl-eating.svg" alt="Hero Image" class="hero-img" />
        <div class="notification notification-1">
          <img src="/img/Logo-name-only.svg" alt="brand" class="brand" />
          <p class="status">We've Received your order!</p>
          <p class="note">Awaiting Restaurant acceptance</p>
        </div>
        <div class="notification notification-2">
          <img src="/img/Logo-name-only.svg" alt="brand" class="brand" />
          <p class="status">Order Accepted!</p>
          <p class="note">Your order will be delivered shortly</p>
        </div>
        <div class="notification notification-3">
          <img src="/img/Logo-name-only.svg" alt="brand" class="brand" />
          <p class="status">Your rider's nearby</p>
          <p class="note">They're almost there, get ready!</p>
        </div>
        <div class="step step-1">1</div>
        <div class="step step-2">2</div>
        <div class="step step-3">3</div>
      </div>
    </div>
  </div>
</section>